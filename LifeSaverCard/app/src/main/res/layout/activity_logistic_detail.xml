<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/logistic_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/product_image"
            android:text="物流状态" />

        <TextView
            android:id="@+id/logistic_state_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/logistic_state"
            android:text="已签收"
            android:textColor="@color/color_price" />

        <TextView
            android:id="@+id/logistic_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logistic_state"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/product_image"
            android:text="承运公司：顺丰" />

        <TextView
            android:id="@+id/logistic_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logistic_company"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/product_image"
            android:text="运单编号:5447811215" />

        <TextView
            android:id="@+id/logistic_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logistic_number"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/product_image"
            android:text="官方电话：400-4545-44" />
    </RelativeLayout>

    <include layout="@layout/horizontal_line" />
</LinearLayout>