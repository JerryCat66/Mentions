<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <include layout="@layout/horizontal_line" />

            <TextView
                android:id="@+id/card_icon_buy"
                style="@style/mineStyle"
                android:drawableLeft="@drawable/mine_icon_setting"
                android:text="@string/card_buy" />

            <include layout="@layout/horizontal_line" />

            <TextView
                android:id="@+id/card_icon_active"
                style="@style/mineStyle"
                android:drawableLeft="@drawable/mine_icon_setting"
                android:text="@string/card_active" />

            <include layout="@layout/horizontal_line" />

            <TextView
                android:id="@+id/card_icon_renew"
                style="@style/mineStyle"
                android:drawableLeft="@drawable/mine_icon_setting"
                android:text="@string/card_renew" />

            <include layout="@layout/horizontal_line" />

            <TextView
                android:id="@+id/card_icon_report_loss"
                style="@style/mineStyle"
                android:drawableLeft="@drawable/mine_icon_setting"
                android:text="@string/card_report_loss" />

            <include layout="@layout/horizontal_line" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>