<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_cccccc"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cardNum"
                    style="@style/TextViewOfTheCardView"
                    android:layout_marginTop="10dp"
                    android:text="卡号:" />

                <TextView
                    android:id="@+id/activeDate"
                    style="@style/TextViewOfTheCardView"
                    android:text="激活时间:" />

                <TextView
                    android:id="@+id/deadDate"
                    style="@style/TextViewOfTheCardView"
                    android:layout_marginBottom="10dp"
                    android:text="失效时间:"
                    android:textColor="@color/color_main_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/userName"
                        style="@style/TextViewOfTheCardView"
                        android:text="持卡人:" />

                    <TextView
                        android:id="@+id/sex"
                        style="@style/TextViewOfTheCardView"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="性别:" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/idNum"
                    style="@style/TextViewOfTheCardView"
                    android:text="身份证:" />

                <TextView
                    android:id="@+id/bindPhone"
                    style="@style/TextViewOfTheCardView"
                    android:text="绑定手机:" />

                <TextView
                    android:id="@+id/contactAddress"
                    style="@style/TextViewOfTheCardView"
                    android:layout_marginBottom="10dp"
                    android:text="联系地址:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/useArea"
                    style="@style/TextViewOfTheCardView"
                    android:layout_marginTop="10dp"
                    android:text="使用区域:" />

                <TextView
                    android:id="@+id/waySell"
                    style="@style/TextViewOfTheCardView"
                    android:layout_marginBottom="10dp"
                    android:text="销售渠道:" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/emergencyContact"
                    style="@style/TextViewOfTheCardView"
                    android:text="紧急联系人:" />

                <TextView
                    android:id="@+id/emergencyCall"
                    style="@style/TextViewOfTheCardView"
                    android:text="紧急联系人电话:" />

                <TextView
                    android:id="@+id/relationShip"
                    style="@style/TextViewOfTheCardView"
                    android:text="与持卡人关系:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bloodType"
                    style="@style/TextViewOfTheCardView"
                    android:text="持卡人:" />

                <TextView
                    android:id="@+id/medicalHistory"
                    style="@style/TextViewOfTheCardView"
                    android:text="既往病史:" />

                <TextView
                    android:id="@+id/drugAllergy"
                    style="@style/TextViewOfTheCardView"
                    android:text="药物过敏情况:" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>