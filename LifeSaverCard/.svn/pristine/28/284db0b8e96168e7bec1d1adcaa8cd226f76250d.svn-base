<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/userName"
        style="@style/TextStyleOfActivitySuccessfully"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="张三"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/userTel"
        style="@style/TextStyleOfActivitySuccessfully"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/userName"
        android:text="18888888888" />

    <TextView
        android:id="@+id/isDefault"
        style="@style/TextStyleOfActivitySuccessfully"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/userTel"
        android:text="默认"
        android:textColor="@color/color_main_text" />

    <ImageView
        android:id="@+id/igModifyAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/mine_manager_modify" />

    <TextView
        android:id="@+id/userAddress"
        style="@style/TextStyleOfActivitySuccessfully"
        android:layout_below="@+id/userName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="这就是个默认地址" />
</RelativeLayout>