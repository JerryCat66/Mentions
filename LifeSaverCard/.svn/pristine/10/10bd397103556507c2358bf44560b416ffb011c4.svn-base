<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--splash样式-->
    <style name="Style_Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/welcome_splash</item>
        <item name="android:cacheColorHint">@null</item>
    </style>

    <style name="LoginButton">
        <item name="android:background">@drawable/selector_login_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="LoginButtonMain">
        <item name="android:background">@drawable/bg_login_btn_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:minHeight">20.0dip</item>
    </style>
    <!--公用部分的style-->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
    <!--首页底部-->
    <style name="MainBottomRadioButtonStyle" parent="RadioButtonStyle">
        <item name="android:drawablePadding">4dip</item>
        <item name="android:textColor">@drawable/main_bottom_select_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingBottom">5dip</item>
    </style>
    <!--我的界面左边带图片，右边带箭头-->
    <style name="mineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textSize">@dimen/text_size_order</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/btn_detail</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/select_bg_hint</item>
    </style>
    <!--完善订单信息 EditeText-->
    <style name="EditTextOrderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_size_order</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/color_cccccc</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--完善订单信息 textView-->
    <style name="TextviewOrderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_size_order</item>
        <item name="android:textColor">@color/color_cccccc</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewOfTheCardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_main_text_black</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
    </style>
    <!--登陆注册页面的style-->
    <style name="AuthBasisStyle">
        <!--登陆注册页面，按钮的高度、宽度、padding-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="BasisEditTextStyle" parent="AuthBasisStyle">
        <!--登陆注册页面的账号、密码输入框-->
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:cacheColorHint">@color/color_999999</item>
        <item name="android:background">@drawable/edittext_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <!--用户信息填写头部textView-->
    <style name="UserInfoTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color_cccccc</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LineContentTextStyle">
        <!--LineMenu内的文字样式——宽高，字体大小-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LineMenuTextStyle">
        <!--LineMenu内的文字样式——宽高，字体大小-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ProfileContentStyle" parent="LineContentTextStyle">
        <!--个人信息页内容的style-->
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textColor">@color/color_000000</item>
    </style>

    <!--我的模块的style-->
    <style name="ProfileLabelStyle" parent="LineMenuTextStyle">
        <!--个人资料页label的style-->
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@color/color_000000</item>
    </style>

    <style name="ImproveStyle" parent="RadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/bg_radio_selector</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--激活卡片TextView属性-->
    <style name="CardRenewTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_4d4948</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
    </style>

    <style name="BasisConfirmButtonStyle" parent="AuthBasisStyle">
        <!--页面底部确定按钮的style-->
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/logout_bg</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--底部弹出框style-->
    <style name="ActionSheetDialogStyle" parent="android:Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/action_sheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/action_sheet_dialog_out</item>
    </style>

    <!--我的  上面图片   下面文字-->
    <style name="myWalletStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/select_bg_hint</item>
    </style>

    <style name="GetAuthCodeBtnStyle">
        <!--获取验证码按钮的style-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:background">@drawable/btn_gray</item>
    </style>

    <style name="TextAfterOKButton">
        <!--底部确认按钮下的文字样式-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_main</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--首页grid下方中文文字style-->
    <style name="MainTextChineseStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_main_text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--首页grid下方英文文字style-->
    <style name="MainTextEnglishStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_main_text_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginBottomOtherStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/color_main_text_black</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
