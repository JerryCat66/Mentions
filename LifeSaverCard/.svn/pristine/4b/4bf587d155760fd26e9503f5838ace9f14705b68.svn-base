<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginButton">
        <item name="android:background">@drawable/selector_login_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:minHeight">20.0dip</item>
    </style>
    <!--公用部分的style-->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
    <!--首页底部-->
    <style name="MainBottomRadioButtonStyle" parent="RadioButtonStyle">
        <item name="android:drawablePadding">0dip</item>
        <item name="android:textColor">@drawable/main_bottom_select_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingBottom">5dip</item>
    </style>
    <!--我的界面左边带图片，右边带箭头-->
    <style name="mineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textSize">@dimen/text_size_order</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/btn_detail</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/select_bg_hint</item>
    </style>
    <!--完善订单信息 EditeText-->
    <style name="EditTextOrderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_size_order</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/color_cccccc</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--完善订单信息 textView-->
    <style name="TextviewOrderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_size_order</item>
        <item name="android:textColor">@color/color_cccccc</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewOfTheCardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
    </style>
    <!--登陆注册页面的style-->
    <style name="AuthBasisStyle">
        <!--登陆注册页面，按钮的高度、宽度、padding-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="BasisEditTextStyle" parent="AuthBasisStyle">
        <!--登陆注册页面的账号、密码输入框-->
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:cacheColorHint">@color/color_999999</item>
        <item name="android:background">@drawable/edittext_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <!--用户信息填写头部textView-->
    <style name="UserInfoTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LineContentTextStyle">
        <!--LineMenu内的文字样式——宽高，字体大小-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LineMenuTextStyle">
        <!--LineMenu内的文字样式——宽高，字体大小-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ProfileContentStyle" parent="LineContentTextStyle">
        <!--个人信息页内容的style-->
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textColor">@color/color_000000</item>
    </style>

    <!--我的模块的style-->
    <style name="ProfileLabelStyle" parent="LineMenuTextStyle">
        <!--个人资料页label的style-->
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@color/color_000000</item>
    </style>

    <style name="ImproveStyle" parent="RadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/bg_radio_selector</item>
        <item name="android:textSize">16sp</item>

    </style>
</resources>
