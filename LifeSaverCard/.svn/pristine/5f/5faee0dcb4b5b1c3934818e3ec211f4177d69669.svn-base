<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cardImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/card_default" />

            <include layout="@layout/horizontal_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/ed_card_type"
                    style="@style/ProfileContentStyle"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/icon_pull_down"
                    android:gravity="right|center"
                    android:hint="请选择卡类型" />

                <TextView
                    style="@style/ProfileLabelStyle"
                    android:layout_alignTop="@id/ed_card_type"
                    android:text="卡类型" />
            </RelativeLayout>

            <include layout="@layout/horizontal_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cardPrice"
                    style="@style/ProfileLabelStyle"
                    android:textColor="@color/color_main_text" />

                <TextView
                    style="@style/ProfileLabelStyle"
                    android:text="/元"
                    android:textColor="@color/color_main_text" />
            </LinearLayout>

            <include layout="@layout/horizontal_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_card_renew_num"
                    style="@style/ProfileContentStyle"
                    android:gravity="right|center" />

                <TextView
                    style="@style/ProfileLabelStyle"
                    android:layout_alignTop="@id/tv_card_renew_num"
                    android:text="续费卡号" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/deadTime"
                    style="@style/CardRenewTextView" />

                <TextView
                    android:id="@+id/userName"
                    style="@style/CardRenewTextView"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/bindPhone"
                    style="@style/CardRenewTextView"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/idNum"
                    style="@style/CardRenewTextView"
                    android:paddingTop="10dp" />

                <TextView
                    android:id="@+id/bloodType"
                    style="@style/CardRenewTextView"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="血型：" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_next_step"
        style="@style/LoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:text="下一步" />
</RelativeLayout>